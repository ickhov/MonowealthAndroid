<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1.0"
    tools:context=".CategoryPickerDialogFragment"
    android:clickable="true"
    android:focusable="true">

    <com.monowealth.monowealth.MediumTextView
        android:id="@+id/fragment_category_picker_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="@string/new_category"
        android:background="@color/white"/>

    <com.monowealth.monowealth.MediumEditText
        android:id="@+id/fragment_category_picker_dialog_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:background="@color/charcoal"
        android:gravity="center"
        android:inputType="textCapWords"
        android:textColor="@color/white" />

    <com.monowealth.monowealth.RegularButton
        android:id="@+id/fragment_category_picker_dialog_add"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:text="@string/save"
        android:textColor="@color/black"
        android:background="@color/white"/>

</LinearLayout>