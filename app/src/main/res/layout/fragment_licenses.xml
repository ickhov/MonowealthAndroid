<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LicensesFragment"
    android:background="@color/charcoal"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:scrollbars="none">

    <RelativeLayout
        android:id="@+id/fragment_licenses_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.monowealth.monowealth.MediumTextView
            android:id="@+id/fragment_licenses_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/third_party_licenses"
            android:textColor="@color/white"/>

        <com.monowealth.monowealth.RegularTextView
            android:id="@+id/fragment_licenses_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_below="@id/fragment_licenses_title"
            android:autoLink="web"
            android:textColorLink="@color/ice"
            android:text="@string/license_description"
            android:textColor="@color/white"/>

    </RelativeLayout>

</ScrollView>